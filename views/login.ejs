<%- include('partials/header') %>

<div class="flex items-center justify-center min-h-screen bg-white px-4">
  <div class="w-full max-w-sm p-8 bg-black text-white shadow-xl rounded-2xl border border-gray-700">
    <h2 class="text-2xl font-bold text-center mb-6">Login to Your Account</h2>

    <form id="loginForm" action="/login" method="POST" class="space-y-5">
      <!-- Email Field -->
      <div>
        <label for="email" class="block mb-1 text-sm font-medium">Email</label>
        <input 
          type="email" 
          name="email" 
          id="email"
          required 
          placeholder="example@school.edu"
          class="w-full px-4 py-2 rounded-lg bg-white text-black border focus:outline-none focus:ring-2 focus:ring-[#9ee261]" />
      </div>

      <!-- Password Field -->
      <div>
        <label for="password" class="block mb-1 text-sm font-medium">Password</label>
        <input 
          type="password" 
          name="password" 
          id="password"
          required 
          placeholder="Enter your password"
          class="w-full px-4 py-2 rounded-lg bg-white text-black border focus:outline-none focus:ring-2 focus:ring-[#9ee261]" />
      </div>

      <!-- Submit Button -->
      <button 
        id="submitBtn"
        type="submit" 
        class="w-full bg-[#9ee261] text-black font-semibold py-2 rounded-lg hover:opacity-90 transition">
        Login
      </button>

      <!-- Loader -->
      <div id="loader" class="hidden flex justify-center mt-4">
        <div class="w-6 h-6 border-4 border-[#9ee261] border-t-transparent rounded-full animate-spin"></div>
      </div>
    </form>

    <!-- Register Link -->
    <p class="text-sm text-center text-gray-400 mt-6">
      Don't have an account? 
      <a href="/register" class="text-[#9ee261] hover:underline">Register</a>
    </p>
  </div>
</div>

<!-- Loading Script -->
<script>
  const form = document.getElementById('loginForm');
  const loader = document.getElementById('loader');
  const submitBtn = document.getElementById('submitBtn');

  form.addEventListener('submit', () => {
    loader.classList.remove('hidden');
    submitBtn.disabled = true;
    submitBtn.textContent = 'Logging in...';
  });
</script>

