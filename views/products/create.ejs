<%- include('../partials/header') %>

<div class="max-w-2xl mx-auto mt-10 p-6 bg-[#141414] text-white rounded-lg shadow">
  <h1 class="text-2xl font-bold mb-6">Add New Product</h1>

  <form action="/products/create" method="POST" enctype="multipart/form-data" class="space-y-4">
    <div>
      <label class="block mb-1">Title</label>
      <input required name="title"
             class="w-full p-2 rounded bg-black border border-gray-700">
    </div>

    <div>
      <label class="block mb-1">Description</label>
      <textarea name="description" rows="3"
                class="w-full p-2 rounded bg-black border border-gray-700"></textarea>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block mb-1">Price (â‚¦)</label>
        <input required type="number" name="price" min="0"
               class="w-full p-2 rounded bg-black border border-gray-700">
      </div>
      <div>
        <label class="block mb-1">Quantity</label>
        <input type="number" name="quantity" min="1" value="1"
               class="w-full p-2 rounded bg-black border border-gray-700">
      </div>
    </div>

    <div>
      <label class="block mb-1">Category</label>
      <input name="category"
             class="w-full p-2 rounded bg-black border border-gray-700">
    </div>

    <div>
      <label class="block mb-1">Product Image</label>
      <input type="file" name="image" accept="image/*"
             class="w-full p-2 bg-black text-white border border-gray-700 rounded">
    </div>

    <button class="bg-[#9ee261] text-black px-4 py-2 rounded font-semibold">
      Publish
    </button>
  </form>
</div>

<%- include('../partials/footer') %>
