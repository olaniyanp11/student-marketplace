<%- include('../../partials/header') %>

<div class="max-w-6xl mx-auto px-4 py-10 text-white">
  <h1 class="text-3xl font-bold mb-6">All Orders</h1>
<form method="GET" action="/admin/orders" class="mb-6 flex flex-wrap gap-4 items-center">
  <!-- Status -->
  <select name="status" class="px-4 py-2 rounded bg-gray-800 text-white">
    <option value="">All Status</option>
    <option value="pending" <%= filterParams?.status==='pending' ? 'selected' : '' %>>Pending</option>
    <option value="shipped" <%= filterParams?.status==='shipped' ? 'selected' : '' %>>Shipped</option>
    <option value="delivered" <%= filterParams?.status==='delivered' ? 'selected' : '' %>>Delivered</option>
  </select>

  <!-- Buyer -->
  <input type="text" name="buyer" placeholder="Buyer ID" 
    value="<%= filterParams?.buyer || '' %>"
    class="px-4 py-2 rounded bg-gray-800 text-white" />

  <!-- Seller -->
  <input type="text" name="seller" placeholder="Seller ID" 
    value="<%= filterParams?.seller || '' %>"
    class="px-4 py-2 rounded bg-gray-800 text-white" />

  <button type="submit" class="px-6 py-2 bg-blue-600 rounded text-white">Apply Filters</button>
</form>

  <% if (orders.length > 0) { %>
    <div class="grid md:grid-cols-2 gap-6">
      <% orders.forEach(order => { %>
        <div class="bg-[#1a1a1a] rounded-lg p-4 shadow">
          <% if (order.product) { %>
            <img src="<%= order.product.image %>" class="w-full h-40 object-cover rounded mb-2" />
            <h2 class="text-xl font-semibold"><%= order.product.title %></h2>
            <p class="text-gray-400 text-sm mb-1"><%= order.product.description %></p>
          <% } %>

          <p><strong>Amount:</strong> â‚¦<%= order.amount %></p>
          <p><strong>Quantity:</strong> <%= order.quantity %></p>
          <p><strong>Buyer:</strong> <%= order.buyer?.name || 'N/A' %></p>
          <p><strong>Seller:</strong> <%= order.seller?.name || 'N/A' %></p>
          <p><strong>Reference:</strong> <%= order.reference %></p>

          <p class="mt-2">
            Payment:
            <span class="text-sm px-2 py-1 rounded bg-green-500">completed</span>
          </p>

          <p class="mt-2">
            Delivery:
            <span class="text-sm px-2 py-1 rounded 
              <%= order.status === 'shipped' ? 'bg-blue-500' 
                : order.buyerConfirmed ? 'bg-green-500' 
                : 'bg-yellow-500' %>">
              <%= order.status === 'shipped' 
                    ? 'shipped' 
                    : (order.buyerConfirmed ? 'delivered' : 'pending') %>
            </span>
          </p>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>No orders yet.</p>
  <% } %>
</div>

<%- include('../../partials/footer') %>
